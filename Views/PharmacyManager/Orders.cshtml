<style>
    .meds-card {
        grid-area: meds;
    }
    /* ===== MEDICATION TABLE ===== */
    .medication-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .medication-table th {
            background: #3498db;
            color: white;
            padding: 12px;
            text-align: left;
        }

        .medication-table td {
            padding: 12px;
            border-bottom: 1px solid #eee;
            vertical-align: top;
        }

        .medication-table select,
        .medication-table input {
            margin: 0;
        }

    .med-details {
        font-size: 12px;
        color: #7f8c8d;
        margin-top: 5px;
    }

    .remove-btn {
        color: #e74c3c;
        background: none;
        border: none;
        cursor: pointer;
        font-size: 16px;
    }

    /* ===== SEARCHABLE MEDICATION DROPDOWN ===== */
    .medication-select-container {
        position: relative;
    }

    .medication-search {
        width: 100%;
        padding: 8px 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-bottom: 5px;
        font-size: 14px;
    }

    .medication-options {
        position: absolute;
        width: 100%;
        max-height: 200px;
        overflow-y: auto;
        background: white;
        border: 1px solid #ddd;
        border-radius: 5px;
        z-index: 100;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        display: none;
    }

    .medication-option {
        padding: 8px 10px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .medication-option:hover {
            background-color: #f5f5f5;
        }
</style>
