@model IEnumerable<IbhayiPharmacy.Models.PharmacyManagerVM.StockOrderVM>

@{
    ViewData["Title"] = "Manage Orders";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container mt-4">
    <div class=" mb-3">
        <a asp-action="Orders" class="btn btn-success">Order Medication</a>
    </div>
    <div class="card p-3">
        <h5 class="title-underline">Medication Orders</h5>
        <div class="card-body">
            <table class="table table-hover table-borderless">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Supplier</th>
                        <th>Medication</th>
                        <th>Quantity</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        var lineCount = order.OrderLines.Count();
                        bool first = true;

                        foreach (var line in order.OrderLines)
                        {
                            <tr>
                                @if (first)
                                {
                                    <td rowspan="@lineCount">@order.StockOrder.OrderDate.ToShortDateString()</td>
                                    <td rowspan="@lineCount">@order.StockOrder.Supplier?.SupplierName</td>
                                }

                                <td>@line.Medication.MedicationName</td>
                                <td>@line.OrderQuantity</td>

                                @if (first)
                                {
                                    <td rowspan="@lineCount">
                                        @if (order.StockOrder.Status == "Ordered")
                                        {
                                            <form asp-action="UpdateOrderStatus" asp-route-id="@order.StockOrder.StockOrderID" method="post" class="d-inline">
                                                <input type="hidden" name="newStatus" value="Received" />
                                                <button type="submit" class="btn btn-sm btn-primary">
                                                    Mark as Received
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@order.StockOrder.Status</span>
                                        }
                                    </td>
                                    first = false;
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
