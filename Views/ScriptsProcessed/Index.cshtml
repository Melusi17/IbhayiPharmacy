@model List<Prescription>

@{
    ViewData["Title"] = "All Prescriptions (Admin)";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0">All Prescriptions</h3>
                </div>
                <div class="card-body">
                    @if (Model.Count()>0)
                    {
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                   
                                    <th>User Name</th>
                                    <th>Email</th>
                                    <th>ID Number</th>
                                    <th>Date Issued</th>
                                    <th>Prescription File</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var script in Model)
                                {
                                    <tr>
                                       
                                        <td>@script.ApplicationUser?.Name</td>
                                         <td>@script.ApplicationUser?.Surname</td>
                                        <td>@script.ApplicationUser?.Email</td>
                                        <td>@script.ApplicationUser?.IDNumber</td>
                                        <td>@script.DateIssued.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            @if (script.Script != null && script.Script.Length > 0)
                                            {
                                                <a asp-action="Download" asp-route-id="@script.PrescriptionID">
                                                    @($"Prescription_{script.PrescriptionID}.pdf")
                                                </a>
                                            }
                                            else
                                            {
                                                <span>No file</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="ScriptsProcessed"
                                               asp-action="Edit"
                                               asp-route-id="@script.PrescriptionID"
                                               class="btn btn-sm btn-primary">
                                                Review
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No prescriptions available for processing.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
