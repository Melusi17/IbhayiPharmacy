@* Views/PharmacistReports/Index.cshtml *@
@model IbhayiPharmacy.Models.PharmacistVM.PharmacistReportsVM

@{
    ViewData["Title"] = "Pharmacist Dispensing Reports";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">
                        <i class="fas fa-chart-bar me-2"></i>Pharmacist Dispensing Reports
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Success/Error Messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Report Filters Form -->
                    <div class="row">
                        <div class="col-md-12">
                            <form method="post" asp-action="GenerateDispensingReport" id="reportForm">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="StartDate" class="form-label"></label>
                                            <input asp-for="StartDate" class="form-control" type="date" />
                                            <span asp-validation-for="StartDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="EndDate" class="form-label"></label>
                                            <input asp-for="EndDate" class="form-control" type="date" />
                                            <span asp-validation-for="EndDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="GroupBy" class="form-label"></label>
                                            <select asp-for="GroupBy" class="form-select">
                                                <option value="Patient">By Patient</option>
                                                <option value="Medication">By Medication</option>
                                                <option value="Schedule">By Schedule</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label">Actions</label>
                                            <div class="d-grid gap-2">
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="fas fa-search me-1"></i>Generate Report
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row mt-2">
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input asp-for="IncludeSchedule" class="form-check-input" />
                                            <label asp-for="IncludeSchedule" class="form-check-label"></label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input asp-for="IncludePricing" class="form-check-input" />
                                            <label asp-for="IncludePricing" class="form-check-label"></label>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Report Summary -->
                    @if (Model.ReportGenerated)
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-chart-pie me-2"></i>Report Summary
                                        </h5>
                                        <div>
                                            <a href="@Url.Action("GeneratePdfReport", new { 
                                                startDate = Model.StartDate, 
                                                endDate = Model.EndDate, 
                                                groupBy = Model.GroupBy,
                                                includeSchedule = Model.IncludeSchedule,
                                                includePricing = Model.IncludePricing
                                            })" class="btn btn-success btn-sm">
                                                <i class="fas fa-file-pdf me-1"></i>Export PDF
                                            </a>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-3 text-center">
                                                <div class="border rounded p-3 bg-white">
                                                    <h3 class="text-primary">@Model.Summary.TotalMedicationsDispensed</h3>
                                                    <p class="mb-0 text-muted">Medications Dispensed</p>
                                                </div>
                                            </div>
                                            <div class="col-md-3 text-center">
                                                <div class="border rounded p-3 bg-white">
                                                    <h3 class="text-success">@Model.Summary.TotalPatientsServed</h3>
                                                    <p class="mb-0 text-muted">Patients Served</p>
                                                </div>
                                            </div>
                                            <div class="col-md-3 text-center">
                                                <div class="border rounded p-3 bg-white">
                                                    <h3 class="text-info">@Model.Summary.TotalUniqueMedications</h3>
                                                    <p class="mb-0 text-muted">Unique Medications</p>
                                                </div>
                                            </div>
                                            <div class="col-md-3 text-center">
                                                <div class="border rounded p-3 bg-white">
                                                    <h3 class="text-warning">R @Model.Summary.TotalRevenue.ToString("F2")</h3>
                                                    <p class="mb-0 text-muted">Total Revenue</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Detailed Report -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-list me-2"></i>Detailed Dispensing Report
                                            <small class="text-muted ms-2">(@Model.GroupBy View)</small>
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        @if (Model.ReportItems.Any())
                                        {
                                            <div class="table-responsive">
                                                <table class="table table-striped table-hover">
                                                    <thead class="table-dark">
                                                        <tr>
                                                            @if (Model.GroupBy == "Patient")
                                                            {
                                                                <th>Patient</th>
                                                                <th>ID Number</th>
                                                            }
                                                            <th>Medication</th>
                                                            <th>Schedule</th>
                                                            <th>Dosage Form</th>
                                                            <th>Quantity</th>
                                                            @if (Model.IncludePricing)
                                                            {
                                                                <th>Unit Price</th>
                                                                <th>Total</th>
                                                            }
                                                            <th>Date Dispensed</th>
                                                            <th>Doctor</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.ReportItems)
                                                        {
                                                            <tr>
                                                                @if (Model.GroupBy == "Patient")
                                                                {
                                                                    <td>@item.PatientName</td>
                                                                    <td>@item.PatientIDNumber</td>
                                                                }
                                                                <td>@item.MedicationName</td>
                                                                <td>
                                                                    <span class="badge bg-secondary">@item.Schedule</span>
                                                                </td>
                                                                <td>@item.DosageForm</td>
                                                                <td>@item.QuantityDispensed</td>
                                                                @if (Model.IncludePricing)
                                                                {
                                                                    <td>R @item.UnitPrice.ToString("F2")</td>
                                                                    <td>R @item.LineTotal.ToString("F2")</td>
                                                                }
                                                                <td>@item.DispensingDate.ToString("dd MMM yyyy")</td>
                                                                <td>@item.DoctorName</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-info text-center">
                                                <i class="fas fa-info-circle me-2"></i>
                                                No dispensing records found for the selected date range and filters.
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Set max date for end date to today
            $('#EndDate').attr('max', new Date().toISOString().split('T')[0]);
            
            // Set min date for start date
            $('#StartDate').attr('max', new Date().toISOString().split('T')[0]);
        });
    </script>
}