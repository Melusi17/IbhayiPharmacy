@model IbhayiPharmacy.Models.Doctor
@{
    ViewData["Title"] = "Edit Doctor";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="card p-3">
    <h5 class="title-underline">Edit Doctor</h5>
    <div class="card-body">
        <form asp-action="EditDoctor" method="post">
            <input type="hidden" asp-for="DoctorID" />
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="HealthCouncilRegistrationNumber"></label>
                <input asp-for="HealthCouncilRegistrationNumber" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="ContactNumber"></label>
                <input asp-for="ContactNumber" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</div>
