                                            <small style="color: #e74c3c; font-weight: bold;">⚠️ Over 2 days old</small>
                                        }
                                    </div>
                                    <div class="quick-actions-small">
                                        <button class="btn-sm btn-warning" onclick="processScript(@script.PrescriptionID)">
                                            <i class="fas fa-play"></i>
                                        </button>
                                        <span class="item-status status-unprocessed">Unprocessed</span>
                                    </div>
