@{
    ViewData["Title"] = "Register";
    Layout = null; // remove this if you're using a shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link rel="stylesheet" href="~/css/Customer/Register.css" />
</head>
<body>
    <div class="register-container">
        <h2>Registration</h2>
        <form asp-action="Register" asp-controller="Customer" method="post" id="registerForm">
            <input type="text" id="name" name="name" placeholder="Name" />
            <span class="error-message" id="nameError"></span>

            <input type="text" id="surname" name="surname" placeholder="Surname" />
            <span class="error-message" id="surnameError"></span>

            <input type="text" id="idNumber" name="idNumber" placeholder="ID Number" />
            <span class="error-message" id="idError"></span>

            <input type="tel" id="cellphone" name="cellphone" placeholder="Cellphone Number" />
            <span class="error-message" id="cellphoneError"></span>

            <input type="email" id="email" name="email" placeholder="Email Address" />
            <span class="error-message" id="emailError"></span>

            <div class="password-wrapper">
                <input type="password" id="password" name="password" placeholder="Password" />
                <span class="toggle-icon" onclick="togglePassword('password', this)">
                    <svg xmlns="http://www.w3.org/2000/svg" class="feather feather-eye" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8S1 12 1 12z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                </span>
            </div>
            <span class="error-message" id="passwordError"></span>

            <div class="password-wrapper">
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" />
                <span class="toggle-icon" onclick="togglePassword('confirmPassword', this)">
                    <svg xmlns="http://www.w3.org/2000/svg" class="feather feather-eye" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8S1 12 1 12z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                </span>
            </div>
            <span class="error-message" id="confirmPasswordError"></span>

            <!-- Allergy picker -->
            <div class="allergy-section">
                <select id="allergySelect">
                    <option value="" disabled selected hidden>Select an allergy</option>
                    <option value="Penicillin">Penicillin</option>
                    <option value="Aspirin">Aspirin</option>
                    <option value="Latex">Latex</option>
                    <option value="Peanuts">Peanuts</option>
                    <option value="Shellfish">Shellfish</option>
                    <option value="None">None</option>
                </select>

                <button type="button" id="addAllergyBtn" class="add-allergy-btn">Add Allergy</button>

                <!-- live “cart” list -->
                <ul id="allergyCart" class="allergy-cart"></ul>
            </div>

            <button type="submit">Submit</button>
        </form>

        <div id="confirmationModal" class="modal hidden">
            <div class="modal-content">
                <h2>Registration Successful!</h2>
                <p>Your information has been saved.</p>
                <a asp-controller="Customer" asp-action="Login" class="login-link">Proceed to Login</a>
            </div>
        </div>
    </div>

    <script src="~/js/Customer/Register.js"></script>
</body>
</html>
