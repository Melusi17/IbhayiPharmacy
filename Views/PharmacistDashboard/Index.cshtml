            </div>

            <!-- Right Column -->
            <div>
                <!-- Activity Feed -->
                <div class="activity-list">
                    <h3>Recent Activity</h3>
                    <div id="activityFeed">
                        <div class="loading-skeleton"></div>
                        <div class="loading-skeleton"></div>
                        <div class="loading-skeleton"></div>
                    </div>
                </div>

                <!-- Low Stock Alert -->
                <div class="list-section stock-alert">
                    <h3>
                        Stock Alerts
                        <span class="alert-badge @(Model.LowStockMedications.Any(m => m.QuantityOnHand == 0) ? "critical" : "warning")">
                            @Model.LowStockMedications.Count(m => m.QuantityOnHand == 0) Critical
                        </span>
                    </h3>
