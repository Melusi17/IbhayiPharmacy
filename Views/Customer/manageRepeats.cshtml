<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Toggle prescription details when clicking an order row
        document.querySelectorAll('.order-row').forEach(orderRow => {
            orderRow.addEventListener('click', () => {
                const orderId = orderRow.getAttribute('data-order-id');
                const detailsRow = document.querySelector(`.medication-details[data-parent-id='${orderId}']`);
                if (detailsRow.style.display === 'table-row') {
                    detailsRow.style.display = 'none';
                } else {
                    // Hide any other open details first
                    document.querySelectorAll('.medication-details').forEach(row => row.style.display = 'none');
                    detailsRow.style.display = 'table-row';
                }
            });
        });

        // Modal elements
        const modal = document.getElementById('refill-modal');
        const modalClose = document.getElementById('modal-close');
        const refillTableBody = document.querySelector('#refill-history-table tbody');

        // Sample refill history data per medication id
        // Replace with actual dynamic data in production
        const refillData = {
            "101": [
                { date: "2025-05-15", orderNo: "ORD001", repeatsLeft: 2 },
                { date: "2025-06-01", orderNo: "ORD001", repeatsLeft: 1 }
            ],
            "102": [
                { date: "2025-05-12", orderNo: "ORD001", repeatsLeft: 0 }
            ],
            "201": [
                { date: "2025-05-10", orderNo: "ORD002", repeatsLeft: 3 }
            ]
        };

        // When clicking a prescription row, open modal with refill history
        document.querySelectorAll('.prescription-row').forEach(presRow => {
            presRow.addEventListener('click', () => {
                const medId = presRow.getAttribute('data-med-id');
                const data = refillData[medId] || [];
                refillTableBody.innerHTML = ''; // clear previous data

                if (data.length === 0) {
                    refillTableBody.innerHTML = `<tr><td colspan="4" style="color:#999;">No refill history found.</td></tr>`;
                } else {
                    data.forEach(entry => {
                        const tr = document.createElement('tr');
                        tr.innerHTML = `
                            <td>${entry.date}</td>
                            <td>${entry.orderNo}</td>
                            <td>${entry.repeatsLeft}</td>
                            <td>
                                ${entry.repeatsLeft > 0 ?
                                    `<button class="btn-upload" data-order-no="${entry.orderNo}" data-med-id="${medId}">Request Refill</button>`
                                    : '<span style="color:#aaa;">No repeats left</span>'
                                }
                            </td>
                        `;
                        refillTableBody.appendChild(tr);
                    });
                }

                modal.style.display = 'block';
            });
        });

        // Close modal
        modalClose.addEventListener('click', () => {
            modal.style.display = 'none';
        });

        window.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.style.display = 'none';
            }
        });

        // Handle refill request button click inside modal
        refillTableBody.addEventListener('click', e => {
            if (e.target.tagName === 'BUTTON' && e.target.classList.contains('btn-upload')) {
                const orderNo = e.target.getAttribute('data-order-no');
                const medId = e.target.getAttribute('data-med-id');
                alert(`Refill requested for medication ID ${medId} from order ${orderNo}.`);
                // Here you can add your AJAX call to actually submit refill request
            }
        });
    });
</script>
