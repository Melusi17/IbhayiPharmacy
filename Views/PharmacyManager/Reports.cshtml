@model IbhayiPharmacy.Models.MedicationReportVM

@{
    ViewData["Title"] = "Medication Stock Report";
}

<div class="container mt-4">
    <h2>Medication Stock Report</h2>

    <form method="get" asp-action="Reports">
        <label><strong>Group By:</strong></label>
        <select name="groupBy" class="form-select d-inline-block" style="width:250px;">
            <option value="">-- All Medications --</option>
            <option value="DosageForm" selected="@(Model.GroupBy == "DosageForm")">Dosage Form</option>
            <option value="Schedule" selected="@(Model.GroupBy == "Schedule")">Schedule</option>
            <option value="Supplier" selected="@(Model.GroupBy == "Supplier")">Supplier</option>
        </select>
        <button type="submit" class="btn btn-primary ms-2">Generate</button>
    </form>

    <hr />

    @if (Model.Groups.Any())
    {
        
        int grandTotal = 0;

        foreach (var group in Model.Groups)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5>@group.GroupName</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-bordered table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Medication Name</th>
                                <th>Schedule</th>
                                <th>Dosage Form</th>
                                <th>Supplier</th>
                                <th>Reorder Level</th>
                                <th>Quantity On Hand</th>
                                <th>Current Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int subtotal = 0;
                            }

                            @foreach (var item in group.Medications)
                            {
                                subtotal += item.QuantityOnHand;
                                <tr>
                                    <td>@item.MedicationName</td>
                                    <td>@item.Schedule</td>
                                    <td>@item.DosageForm.DosageFormName</td>
                                    <td>@item.Supplier.SupplierName</td>
                                    <td>@item.ReOrderLevel</td>
                                    <td>@item.QuantityOnHand</td>
                                    <td>R @item.CurrentPrice</td>
                                </tr>
                            }

                            <tr class="fw-bold table-secondary">
                                <td colspan="5" class="text-end">Sub-total:</td>
                                <td>@subtotal</td>
                                <td></td>
                            </tr>

                           
                            @{
                                grandTotal += subtotal;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        
        <div class="text-end mt-3 fw-bold">
            GRAND TOTAL: @grandTotal
        </div>
    }
    else
    {
        <p>No medications found.</p>
    }

</div>