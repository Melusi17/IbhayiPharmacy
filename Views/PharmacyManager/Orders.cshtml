@model IbhayiPharmacy.Models.StockOrder

@{
    ViewData["Title"] = "Add Order";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Add New Order</h2>

    <form asp-action="Orders" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="SupplierID" class="form-label">Supplier</label>
               
                <select asp-for="SupplierID"  class="form-select">
                    <option value="">-- Select Medication --</option>
                    @foreach (var med in ViewBag.Suppliers)
                    {
                        <option value="@med.SupplierID">@med.MedicationName</option>
                    }
                </select>
                <span asp-validation-for="SupplierID" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="col-md-6">
                    <label for="CustomerID" class="form-label">Customer</label>
                    <div class="mb-4">
                        <label class="form-label">Quantity</label>
                        <input asp-for="Quantity" type="number" class="form-control" placeholder="e.g. 100" />
                    </div>
                </div>
            </div>
        </div>

       

        <h5 class="mt-4 mb-3">Add Medications</h5>

        @for (int i = 0; i < 3; i++) // allow 3 meds per order (adjust as needed)
        {
            <div class="row mb-3 border rounded p-2">
                <div class="col-md-5">
                    <label class="form-label">Medication</label>
                    <select asp-for="MedicationID" name="OrderLines[@i].MedicationID" class="form-select">
                        <option value="">-- Select Medication --</option>
                        @foreach (var med in ViewBag.Medications)
                        {
                            <option value="@med.MedcationID">@med.MedicationName</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Quantity</label>
                    <input name="OrderLines[@i].Quantity" class="form-control" type="number" min="1" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Price (R)</label>
                    <input name="OrderLines[@i].Price" class="form-control" type="number" step="0.01" />
                </div>
            </div>
        }

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4">Save Order</button>
            <a asp-action="ManageOrders" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>
