                        {
                            <p style="text-align: center; color: #666; padding: 20px;">No pending orders</p>
                        }
                    </div>
                    <div style="text-align: center; margin-top: 15px;">
                        <a href="@Url.Action("Index", "PharmacistDispensing")" class="view-all">View All Orders</a>
                    </div>
                </div>

                <!-- Unprocessed Scripts -->
                <div class="list-section">
                    <div class="section-header">
                        <h3>Unprocessed Scripts</h3>
                        <div class="section-controls">
                            <input type="text" id="searchScripts" placeholder="Search by script # or name..." class="search-box" onkeyup="filterScripts()">
                        </div>
                    </div>
                    <div id="scriptsList">
                        @if (Model.UnprocessedPrescriptions.Any())
                        {
                            @foreach (var script in Model.UnprocessedPrescriptions.Take(5))
                            {
                                var isOld = (DateTime.Now - script.DateIssued).TotalDays > 2;
                                <div class="list-item @(isOld ? "urgent" : "")" data-script-id="@script.PrescriptionID" data-customer-name="@script.ApplicationUser?.Name @script.ApplicationUser?.Surname">
                                    <div class="item-details">
                                        <h4>Prescription #@script.PrescriptionID.ToString("D3")</h4>
                                        <p>@script.ApplicationUser?.Name @script.ApplicationUser?.Surname</p>
                                        <small>@script.DateIssued.ToString("dd MMM yyyy")</small>
                                        @if (isOld)
