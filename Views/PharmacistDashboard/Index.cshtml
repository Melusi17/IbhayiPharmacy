        <div class="dashboard-grid">
            <!-- Left Column -->
            <div>
                <!-- Charts Section -->
                <div class="chart-container">
                    <h3>Orders Overview</h3>
                    <canvas id="ordersChart" width="400" height="200"></canvas>
                </div>

                <!-- Pending Orders with Search -->
                <div class="list-section">
                    <div class="section-header">
                        <h3>Pending Orders</h3>
                        <div class="section-controls">
                            <input type="text" id="searchOrders" placeholder="Search by order # or name..." class="search-box" onkeyup="filterOrders()">
                            <select class="filter-select" onchange="filterOrders()">
                                <option value="all">All Orders</option>
                                <option value="today">Today</option>
                                <option value="urgent">High Priority</option>
                            </select>
                        </div>
                    </div>
                    <div id="ordersList">
                        @if (Model.PendingOrders.Any())
                        {
                            @foreach (var order in Model.PendingOrders.Take(5))
                            {
                                var isUrgent = (DateTime.Now - order.OrderDate).TotalHours > 24;
                                <div class="list-item @(isUrgent ? "urgent" : "")" data-order-date="@order.OrderDate.ToString("yyyy-MM-dd")" data-order-number="@order.OrderNumber" data-customer-name="@order.Customer?.ApplicationUser?.Name @order.Customer?.ApplicationUser?.Surname">
                                    <div class="item-details">
                                        <h4>@order.OrderNumber</h4>
                                        <p>@order.Customer?.ApplicationUser?.Name @order.Customer?.ApplicationUser?.Surname</p>
                                        <small>@order.OrderDate.ToString("dd MMM yyyy HH:mm")</small>
                                        @if (isUrgent)
                                        {
                                            <small style="color: #e74c3c; font-weight: bold;">⚠️ Over 24 hours</small>
