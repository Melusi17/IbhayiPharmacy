@model IbhayiPharmacy.Models.Active_Ingredient

@{
    ViewData["Title"] = "Delete Active Ingredient";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container mt-4">
    <div class="card p-4 shadow-sm">
        <h5 class="title-underline text-danger mb-3">Delete Active Ingredient</h5>

        <p>Are you sure you want to delete this ingredient?</p>

        <div class="alert alert-warning">
            <strong>@Model.Name</strong>
        </div>

        <form asp-action="DeleteActiveIngredient" method="post">
            <input type="hidden" name="id" value="@Model.Active_IngredientID" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="ActiveIngredients" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
