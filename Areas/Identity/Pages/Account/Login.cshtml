@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid login-container">
    <div class="login-panel">
        <!-- Pharmacy Brand Header -->
        <div class="pharmacy-brand text-center mb-4">
            <div class="brand-icon">
                <i class="fas fa-mortar-pestle"></i>
            </div>
            <h1 class="pharmacy-name">Ibhayi Pharmacy</h1>
            <p class="pharmacy-tagline">Your Health, Our Priority</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-group">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <div class="input-with-icon">
                                <i class="fas fa-envelope"></i>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <div class="input-with-icon">
                                <i class="fas fa-lock"></i>
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <div class="form-actions text-center">
                            <button id="login-submit" type="submit" class="btn btn-login">
                                <div class="btn-content">
                                    <i class="fas fa-sign-in-alt"></i>
                                    <span>LOG IN</span>
                                </div>
                            </button>
                        </div>

                        <div class="login-links text-center mt-4">
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="login-link">
                                    <i class="fas fa-user-plus"></i> Register as a new user
                                </a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>

        <!-- Footer -->
        <div class="login-footer text-center mt-4">
            <p class="text-muted">&copy; 2025 Ibhayi Pharmacy. All rights reserved.</p>
        </div>
    </div>
</div>

<style>
    * {
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, #f4f6f9 0%, #e8f4f8 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        width: 100%;
    }

    .login-panel {
        background: #ffffff;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 800px;
        position: relative;
        overflow: hidden;
        margin: 0 auto;
    }

        .login-panel::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #1f9f77, #00796b);
        }

    /* Pharmacy Brand Styling */
    .pharmacy-brand {
        margin-bottom: 30px;
    }

    .brand-icon {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #1f9f77, #00796b);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        box-shadow: 0 5px 15px rgba(31, 159, 119, 0.3);
    }

        .brand-icon i {
            font-size: 30px;
            color: white;
        }

    .pharmacy-name {
        color: #00796b;
        font-weight: 700;
        font-size: 2.2rem;
        margin-bottom: 5px;
        letter-spacing: -0.5px;
        line-height: 1.2;
    }

    .pharmacy-tagline {
        color: #1f9f77;
        font-size: 1rem;
        font-weight: 500;
        font-style: italic;
        line-height: 1.4;
    }

    /* Form Elements - Left Aligned Labels & Input Text */
    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .form-label {
        font-weight: 600;
        color: #22586A;
        margin-bottom: 8px;
        display: block;
        font-size: 0.95rem;
        text-align: left;
    }

    .input-with-icon {
        position: relative;
        text-align: left;
    }

        .input-with-icon i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #1f9f77;
            font-size: 16px;
            z-index: 2;
        }

        .input-with-icon .form-control {
            padding-left: 45px;
            text-align: left;
        }

    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 14px 20px;
        font-size: 15px;
        transition: all 0.3s ease;
        width: 100%;
        background: #fafbfc;
        text-align: left;
    }

        .form-control:focus {
            outline: none;
            border-color: #1f9f77;
            box-shadow: 0 0 0 3px rgba(31,159,119,0.15);
            background: white;
            transform: translateY(-1px);
        }

    .form-check {
        display: flex;
        align-items: center;
        gap: 10px;
        text-align: left;
        justify-content: flex-start;
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        margin-top: 0;
        border: 2px solid #dee2e6;
    }

        .form-check-input:checked {
            background-color: #1f9f77;
            border-color: #1f9f77;
        }

    .form-check-label {
        color: #22586A;
        font-weight: 500;
    }

    .form-actions {
        margin: 30px 0 25px 0;
        text-align: center;
    }

    /* Login button - PERFECTLY CENTERED CONTENT */
    .btn-login {
        background: linear-gradient(135deg, #1f9f77, #00796b);
        color: white;
        padding: 16px 40px;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        min-width: 200px;
        height: 55px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 6px 20px rgba(31, 159, 119, 0.3);
    }

        .btn-login:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(31, 159, 119, 0.4);
            background: linear-gradient(135deg, #28bf96, #00897b);
        }

        .btn-login:active {
            transform: translateY(-1px);
        }

    .btn-content {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
    }

        .btn-content i,
        .btn-content span {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            line-height: 1;
            margin: 0;
            padding: 0;
        }

        .btn-content i {
            font-size: 16px;
            width: 16px;
        }

        .btn-content span {
            font-weight: 600;
            white-space: nowrap;
        }

    /* Links */
    .login-links {
        border-top: 1px solid #f1f3f4;
        padding-top: 20px;
        text-align: center;
    }

    .login-link {
        color: #1f9f77;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 8px;
        background: #f8fdfb;
    }

        .login-link:hover {
            color: #28bf96;
            text-decoration: none;
            transform: translateY(-2px);
            background: #f0f9f6;
            box-shadow: 0 4px 12px rgba(31, 159, 119, 0.15);
        }

    /* Alert styling */
    .alert {
        border-radius: 12px;
        border: none;
        padding: 15px 20px;
        background: #f8d7da;
        color: #721c24;
        border-left: 4px solid #dc3545;
        text-align: left;
        margin-bottom: 20px;
    }

    .text-danger {
        color: #dc3545;
        font-size: 13px;
        margin-top: 8px;
        display: block;
        font-weight: 500;
        text-align: left;
    }

    /* Footer */
    .login-footer {
        border-top: 1px solid #f1f3f4;
        padding-top: 15px;
        margin-top: 25px;
    }

    /* Responsive design - Ensuring visibility at 100% zoom */
    @@media (max-width: 1200px) {
        .login-panel {
            max-width: 750px;
        }
    }

    @@media (max-width: 992px) {
        .login-panel {
            max-width: 700px;
            padding: 35px;
        }

        .pharmacy-name {
            font-size: 2rem;
        }
    }

    @@media (max-width: 768px) {
        .login-container {
            padding: 15px;
        }

        .login-panel {
            padding: 30px 25px;
            max-width: 100%;
            margin: 10px;
        }

        .pharmacy-name {
            font-size: 1.8rem;
        }

        .brand-icon {
            width: 60px;
            height: 60px;
        }

            .brand-icon i {
                font-size: 25px;
            }

        .btn-login {
            width: 100%;
            max-width: 280px;
            min-width: auto;
        }
    }

    @@media (max-width: 576px) {
        .login-container {
            padding: 10px;
        }

        .login-panel {
            padding: 25px 20px;
            border-radius: 15px;
        }

        .pharmacy-name {
            font-size: 1.6rem;
        }

        .pharmacy-tagline {
            font-size: 0.9rem;
        }

        .brand-icon {
            width: 50px;
            height: 50px;
        }

            .brand-icon i {
                font-size: 22px;
            }

        .btn-login {
            padding: 14px 30px;
            font-size: 15px;
            height: 50px;
        }

        .form-control {
            padding: 12px 15px;
            font-size: 14px;
        }

        .input-with-icon i {
            left: 12px;
        }

        .input-with-icon .form-control {
            padding-left: 40px;
        }
    }

    @@media (max-width: 400px) {
        .login-panel {
            padding: 20px 15px;
        }

        .pharmacy-name {
            font-size: 1.4rem;
        }

        .form-actions {
            margin: 25px 0 20px 0;
        }
    }

    /* High zoom level support */
    @@media (max-height: 700px) {
        .login-container {
            align-items: flex-start;
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .login-panel {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .pharmacy-brand {
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }
    }

    /* Animation for form elements */
    .form-group {
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(25px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Stagger animation for form groups */
    .form-group:nth-child(1) {
        animation-delay: 0.1s;
    }

    .form-group:nth-child(2) {
        animation-delay: 0.2s;
    }

    .form-check {
        animation-delay: 0.3s;
    }

    .form-actions {
        animation-delay: 0.4s;
    }

    .login-links {
        animation-delay: 0.5s;
    }

    /* Smooth transitions for all interactive elements */
    * {
        transition: all 0.3s ease;
    }

    /* Floating animation for brand icon */
    .brand-icon {
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-5px);
        }

        100% {
            transform: translateY(0px);
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}