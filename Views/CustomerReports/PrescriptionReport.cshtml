        font-size: 16px;
        margin-top: 10px;
        text-align: right;
    }

    .grand-total-section {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 3px double #1f9f77;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .report-panel {
            padding: 20px;
            margin: 10px;
        }

        .form-row {
            flex-direction: column;
            gap: 15px;
        }

        .form-group {
            min-width: 100%;
        }

            .form-group.full-width {
                min-width: 100%;
            }

        .form-actions {
            flex-direction: column;
            align-items: center;
        }

        .btn {
            min-width: 200px;
            width: 100%;
            max-width: 250px;
        }
    }

    @@media (max-width: 480px) {
        .btn {
            min-width: 180px;
            padding: 10px 20px;
        }

            .btn i {
                font-size: 14px;
            }

            .btn span {
                font-size: 14px;
            }
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function(){
            // Set default dates if not set
            if (!$('#StartDate').val()) {
                $('#StartDate').val('@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")');
            }
            if (!$('#EndDate').val()) {
                $('#EndDate').val('@DateTime.Now.ToString("yyyy-MM-dd")');
            }

            $('#previewBtn').click(function(){
                var data = {
                    startDate: $('#StartDate').val(),
                    endDate: $('#EndDate').val(),
                    groupBy: $('#GroupBy').val()
                };

                if(!data.startDate || !data.endDate){
                    alert('Please select both start and end dates.');
                    return;
                }

                if(new Date(data.startDate) > new Date(data.endDate)){
                    alert('Start date cannot be after end date.');
                    return;
                }

                var $previewBtn = $('#previewBtn');
                var $icon = $previewBtn.find('i');
                var $text = $previewBtn.find('span');

                // Store original content
                var originalIcon = $icon.attr('class');
                var originalText = $text.text();

                // Update to loading state
                $icon.attr('class', 'fas fa-spinner fa-spin');
                $text.text('Generating Preview...');
                $previewBtn.prop('disabled', true);

                $.ajax({
                    url: '@Url.Action("PreviewReport")',
                    type: 'POST',
                    data: data,
                    success: function(result){
                        $('#previewContainer').html(result);
                        $('#downloadBtn').show();

                        // Restore original content
                        $icon.attr('class', originalIcon);
                        $text.text(originalText);
                        $previewBtn.prop('disabled', false);
                    },
                    error: function(xhr, status, error){
                        alert('Failed to load preview. Please try again.');

                        // Restore original content
                        $icon.attr('class', originalIcon);
                        $text.text(originalText);
                        $previewBtn.prop('disabled', false);
                        console.error('Preview error:', error);
                    }
                });
            });

            // Clear preview when form inputs change
            $('#StartDate, #EndDate, #GroupBy').change(function(){
                $('#previewContainer').empty();
                $('#downloadBtn').hide();
            });
        });
    </script>
}