    <script>
        // Toggle sidebar
        function toggleSidebar() {
            const sidebar = document.querySelector('.sidebar');
            const toggleBtn = document.querySelector('.toggle-sidebar i');

            sidebar.classList.toggle('collapsed');

            if (sidebar.classList.contains('collapsed')) {
                toggleBtn.classList.remove('fa-chevron-left');
                toggleBtn.classList.add('fa-chevron-right');
            } else {
                toggleBtn.classList.remove('fa-chevron-right');
                toggleBtn.classList.add('fa-chevron-left');
            }
        }

        // Custom Notification Modal Functions
        function openCustomNotifyModal() {
            const modal = document.getElementById('customNotifyModal');
            modal.classList.add('show');
            document.getElementById('recipientEmail').focus();
        }

        function closeCustomNotifyModal() {
            const modal = document.getElementById('customNotifyModal');
            modal.classList.remove('show');
            // Reset form
            document.getElementById('customNotifyForm').reset();
            document.getElementById('emailError').style.display = 'none';
            document.getElementById('recipientEmail').classList.remove('error');
        }

        // Validate email format
        function isValidEmail(email) {
            const emailRegex = /^[^\s]+[^\s]+\.[^\s]+/;
            return emailRegex.test(email);
        }

        // Custom notification form submission
        document.getElementById('customNotifyForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const emailInput = document.getElementById('recipientEmail');
            const email = emailInput.value.trim();
            const sendBtn = document.getElementById('sendCustomNotifyBtn');
            const includeSummary = document.getElementById('includeSummary').checked;
            const highlightCritical = document.getElementById('highlightCritical').checked;

            // Validate email
            if (!isValidEmail(email)) {
                emailInput.classList.add('error');
                document.getElementById('emailError').style.display = 'block';
                return;
            }

            // Disable button and show loading
            const originalText = sendBtn.innerHTML;
            sendBtn.disabled = true;
            sendBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';

            try {
                const response = await fetch('@Url.Action("NotifyCustom", "PharmacistDashboard")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({
                        email: email,
                        includeSummary: includeSummary,
                        highlightCritical: highlightCritical
                    })
                });

                const data = await response.json();

                if (data.success) {
                    showNotification(`Low stock report sent successfully to ${email}`, 'success');
                    closeCustomNotifyModal();
                } else {
                    showNotification('Failed to send notification: ' + data.message, 'error');
                }
            } catch (error) {
                console.error('Error sending custom notification:', error);
                showNotification('Error sending notification. Please try again.', 'error');
            } finally {
                sendBtn.disabled = false;
                sendBtn.innerHTML = originalText;
            }
        });

        // Real-time email validation
        document.getElementById('recipientEmail').addEventListener('input', function() {
            const email = this.value.trim();
            if (email === '' || isValidEmail(email)) {
                this.classList.remove('error');
                document.getElementById('emailError').style.display = 'none';
            } else {
                this.classList.add('error');
                document.getElementById('emailError').style.display = 'block';
            }
        });

        // Close modal when clicking outside
        document.getElementById('customNotifyModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeCustomNotifyModal();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeCustomNotifyModal();
            }
        });

        // [KEEP ALL YOUR EXISTING JAVASCRIPT FUNCTIONS - THEY ARE PERFECT]
        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.ctrlKey) {
                e.preventDefault();
                switch(e.key) {
                    case '1': window.location.href = '@Url.Action("QuickProcessPrescription", "PharmacistDashboard")'; break;
                    case '2': window.location.href = '@Url.Action("QuickProcessOrder", "PharmacistDashboard")'; break;
                    case '3': window.location.href = '@Url.Action("QuickViewCollections", "PharmacistDashboard")'; break;
                    case '4': window.location.href = '@Url.Action("QuickViewProcessedScripts", "PharmacistDashboard")'; break;
                    case 'r': refreshData(); break;
                    case 'n': notifyManager(); break;
                    case 'c': openCustomNotifyModal(); break;
                }
            }
        });

        // Show notification
        function showNotification(message, type = 'success') {
            const toast = document.getElementById('notificationToast');
            toast.textContent = message;
            toast.className = `notification-toast ${type} show`;

            setTimeout(() => {
                toast.classList.remove('show');
            }, 5000);
        }

        // Refresh data
        async function refreshData() {
            showNotification('Refreshing data...', 'warning');
            await loadDashboardStats();
            await loadRecentActivity();
            await loadPerformanceMetrics();
            showNotification('Data refreshed successfully!');
        }

        // Load dashboard statistics and charts
        document.addEventListener('DOMContentLoaded', function() {
            loadDashboardStats();
            loadRecentActivity();
            loadPerformanceMetrics();
            startRealTimeUpdates();
        });

        async function loadDashboardStats() {
            try {
                const response = await fetch('@Url.Action("GetDashboardStats", "PharmacistDashboard")');
                const data = await response.json();

                if (data.success) {
                    renderCharts(data);
                } else {
                    console.error('Failed to load dashboard stats:', data.message);
                    renderFallbackChart();
                }
            } catch (error) {
                console.error('Error loading dashboard stats:', error);
                renderFallbackChart();
            }
        }

        async function loadRecentActivity() {
            try {
                const response = await fetch('@Url.Action("GetRecentActivity", "PharmacistDashboard")');
                const data = await response.json();

                if (data.success) {
                    renderActivityFeed(data.activity);
                } else {
                    console.error('Failed to load recent activity:', data.message);
                    renderActivityFeed([]);
                }
            } catch (error) {
                console.error('Error loading recent activity:', error);
                renderActivityFeed([]);
            }
        }

        async function loadPerformanceMetrics() {
            try {
                document.getElementById('avgProcessTime').textContent = '15m';
                document.getElementById('completionRate').textContent = '92%';
            } catch (error) {
                console.error('Error loading performance metrics:', error);
            }
        }

        function renderCharts(data) {
            const ordersCtx = document.getElementById('ordersChart').getContext('2d');
            if (window.ordersChart) {
                window.ordersChart.destroy();
            }

            if (!data.ordersByStatus || data.ordersByStatus.length === 0) {
                renderFallbackChart();
                return;
            }

            window.ordersChart = new Chart(ordersCtx, {
                type: 'doughnut',
                data: {
                    labels: data.ordersByStatus.map(item => item.Status || 'Unknown'),
                    datasets: [{
                        data: data.ordersByStatus.map(item => item.Count || 0),
                        backgroundColor: [
                            '#e74c3c', '#27ae60', '#f39c12', '#3498db', '#9b59b6'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    onClick: (e, elements) => {
                        if (elements.length > 0) {
                            const index = elements[0].index;
                            const status = data.ordersByStatus[index].Status;
                            filterOrdersByStatus(status);
                        }
                    },
                    plugins: {
                        legend: { position: 'bottom' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.label}: ${context.parsed} orders`;
                                }
                            }
                        }
                    }
                }
            });
        }

        function renderFallbackChart() {
            const ordersCtx = document.getElementById('ordersChart').getContext('2d');
            if (window.ordersChart) {
                window.ordersChart.destroy();
            }

            window.ordersChart = new Chart(ordersCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Pending', 'Ready for Collection', 'Collected'],
                    datasets: [{
                        data: [0, 0, 0],
                        backgroundColor: ['#e74c3c', '#27ae60', '#f39c12']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { position: 'bottom' } }
                }
            });
        }

        function renderActivityFeed(activities) {
            const activityFeed = document.getElementById('activityFeed');

            if (!activities || activities.length === 0) {
                activityFeed.innerHTML = '<p style="text-align: center; color: #666; padding: 20px;">No recent activity</p>';
                return;
            }

            let html = '';
            activities.forEach(activity => {
                const icon = activity.Icon || (activity.Type.includes('Order') ? '📦' : '✅');
                const date = new Date(activity.Date).toLocaleDateString() + ' ' + new Date(activity.Date).toLocaleTimeString();
                const typeClass = activity.Type.toLowerCase().includes('order') ? 'order' :
                                 activity.Type.toLowerCase().includes('prescription') ? 'prescription' : '';

                html += `
                    <div class="activity-item ${typeClass}">
                        <div class="activity-type">${icon} ${activity.Type}</div>
                        <div>${activity.Description}</div>
                        <div class="activity-date">${date}</div>
                        <small>Status: ${activity.Status}</small>
                    </div>
                `;
            });

            activityFeed.innerHTML = html;
        }

        // Filter functions
        function filterOrders() {
            const searchTerm = document.getElementById('searchOrders').value.toLowerCase();
            const filterValue = document.querySelector('.filter-select').value;
            const items = document.querySelectorAll('#ordersList .list-item');

            items.forEach(item => {
                const orderNumber = item.dataset.orderNumber.toLowerCase();
                const customerName = item.dataset.customerName.toLowerCase();
                const isToday = new Date(item.dataset.orderDate).toDateString() === new Date().toDateString();
                const isUrgent = item.classList.contains('urgent');

                const matchesSearch = orderNumber.includes(searchTerm) || customerName.includes(searchTerm);
                const matchesFilter =
                    filterValue === 'all' ||
                    (filterValue === 'today' && isToday) ||
                    (filterValue === 'urgent' && isUrgent);

                item.style.display = (matchesSearch && matchesFilter) ? 'flex' : 'none';
            });
        }

        function filterScripts() {
            const searchTerm = document.getElementById('searchScripts').value.toLowerCase();
            const items = document.querySelectorAll('#scriptsList .list-item');

            items.forEach(item => {
                const scriptId = item.dataset.scriptId.toString();
                const customerName = item.dataset.customerName.toLowerCase();
                const matchesSearch = scriptId.includes(searchTerm) || customerName.includes(searchTerm);
                item.style.display = matchesSearch ? 'flex' : 'none';
            });
        }

        function filterOrdersByStatus(status) {
            showNotification(`Filtering orders by: ${status}`, 'warning');
        }

        // Action functions
        function markOrderReady(orderId) {
            if (confirm('Mark this order as ready for collection?')) {
                showNotification('Order marked as ready!', 'success');
                setTimeout(() => refreshData(), 1000);
            }
        }

        function processScript(scriptId) {
            window.location.href = `@Url.Action("Edit", "ScriptsProcessed")/${scriptId}`;
        }

        // Notify Manager function
        async function notifyManager() {
            const btn = document.getElementById('notifyManagerBtn');
            const originalText = btn.innerHTML;

            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending Notification...';

            try {
                const response = await fetch('@Url.Action("NotifyManager", "PharmacistDashboard")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                const data = await response.json();

                if (data.success) {
                    showNotification('Manager notified successfully! Email sent with current stock levels.', 'success');
                } else {
                    showNotification('Failed to notify manager: ' + data.message, 'error');
                }
            } catch (error) {
                console.error('Error notifying manager:', error);
                showNotification('Error sending notification. Please try again.', 'error');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }

        // Real-time updates
        function startRealTimeUpdates() {
            setInterval(checkForNewItems, 30000);
        }

        async function checkForNewItems() {
            try {
                const response = await fetch('@Url.Action("GetNewItemsCount", "PharmacistDashboard")');
                const data = await response.json();

                if (data.newOrders > 0 || data.newScripts > 0) {
                    showNotification(`New items: ${data.newOrders} orders, ${data.newScripts} scripts`, 'warning');
                }
            } catch (error) {
                console.error('Error checking for new items:', error);
            }
        }

        // Auto-refresh every 2 minutes
        setInterval(() => {
            loadDashboardStats();
            loadRecentActivity();
        }, 120000);

        // Pull-to-refresh for mobile
        let touchStartY = 0;
        document.addEventListener('touchstart', e => {
            touchStartY = e.touches[0].clientY;
        });

        document.addEventListener('touchend', e => {
            const touchEndY = e.changedTouches[0].clientY;
            if (touchStartY - touchEndY > 100) {
                refreshData();
            }
        });
    </script>
