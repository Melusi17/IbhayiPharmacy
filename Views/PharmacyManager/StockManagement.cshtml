@model IEnumerable<IbhayiPharmacy.Models.Medication>

@{
    ViewData["Title"] = "Stock Management";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="container">
    <!-- Search / Header -->
    <div class="card p-3 mb-4">
        <h5 class="title-underline">Stock Management</h5>
        <input type="text" class="form-control" placeholder="Search medication...">
    </div>

    <!-- Stock Table -->
    <div class="card p-3">
        <h6 class="title-underline">Medication Stock Levels</h6>

        <table class="table table-hover table-borderless align-middle">
            <thead class="table-light" style="color: #2c3e50;">
                <tr>
                    <th>Medication</th>
                    <th>Dosage Form</th>
                    <th>Quantity on Hand</th>
                    <th>Re-order Level</th>
                    <th>Set Stock</th>
                    <th>Increment</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var med in Model)
                {
                    <tr>
                        <td>@med.MedicationName</td>
                        <td>@med.DosageForm?.DosageFormName</td>
                        <td>@med.QuantityOnHand</td>
                        <td>@med.ReOrderLevel</td>
                        <td style="width: 120px;">
                            <input type="number" class="form-control form-control-sm" name="NewStock_@med.MedcationID" placeholder="e.g. 150">
                        </td>
                        <td style="width: 120px;">
                            <input type="number" class="form-control form-control-sm" name="Increment_@med.MedcationID" placeholder="e.g. 20">
                        </td>
                        <td>
                            <form asp-action="UpdateStock" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@med.MedcationID" />
                                <input type="hidden" name="newStock" value="" />
                                <button type="submit" class="btn btn-sm btn-success">Apply</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
