@model IbhayiPharmacy.Models.Doctor;
@{
    ViewData["Title"] = "AddDoctor";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";

}



<!-- Add New Doctor Form -->
<div class="card p-3">
    <h5 class="title-underline">New Doctor</h5>
    <div class="card-body">
        <form asp-action="AddDoctor" asp-controller="PharmacyManager" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label">First Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="docName" placeholder="e.g. John">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Surname" class="form-label">Surname</label>
                    <input asp-for="Surname" type="text" class="form-control" id="docSurname" placeholder="e.g. Smith">
                    <span asp-validation-for="Surname" class="text-danger"></span>

                </div>
            </div>

            <div class="mb-3">
                <label asp-for="HealthCouncilRegistrationNumber" class="form-label">Practice Number</label>
                <input asp-for="HealthCouncilRegistrationNumber" type="text" class="form-control" id="practiceNumber" placeholder="e.g. PRC-987654">
                <span asp-validation-for="HealthCouncilRegistrationNumber" class="text-danger"></span>

            </div>

            <div class="mb-3">
                <label asp-for="ContactNumber" class="form-label">Contact Number</label>
                <input asp-for="ContactNumber" type="tel" class="form-control" id="contactNumber" placeholder="e.g. 071 123 4567">
                <span asp-validation-for="ContactNumber" class="text-danger"></span>

            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="e.g. dr.smith@email.com">
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>

            <button type="submit" class="btn btn-primary">Add Doctor</button>
        </form>
    </div>
</div>