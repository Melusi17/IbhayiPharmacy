@model IbhayiPharmacy.Models.Pharmacy

@{
    ViewData["Title"] = "Edit Pharmacy Info";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="card p-3 mt-4">
    <h5 class="mb-4 title-underline">Edit Pharmacy Information</h5>

    <form asp-action="EditPharmacyInfo" method="post">
        <input type="hidden" asp-for="PharmacyID" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="HealthCouncilRegNo" class="form-label"></label>
            <input asp-for="HealthCouncilRegNo" class="form-control" />
            <span asp-validation-for="HealthCouncilRegNo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <textarea asp-for="Address" class="form-control" rows="2"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="WebsiteURL" class="form-label"></label>
            <input asp-for="WebsiteURL" class="form-control" />
            <span asp-validation-for="WebsiteURL" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PharmacistID" class="form-label">Responsible Pharmacist</label>
            <select asp-for="PharmacistID" class="form-select" asp-items="ViewBag.Pharmacists">
                <option value="">Select a pharmacist</option>
            </select>
            <span asp-validation-for="PharmacistID" class="text-danger"></span>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary">Update Pharmacy</button>
            <a asp-action="PharmacyInfo" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
