                            var progressWidth = Math.Min(100, (med.QuantityOnHand / (double)med.ReOrderLevel) * 100);
                            <div class="list-item @stockStatus" data-medication-id="@med.MedcationID" data-medication-name="@med.MedicationName">
                                <div class="item-details">
